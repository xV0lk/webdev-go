{{template "header" .}}
<div class="px-5 my-5">
  <h1 class="text-3xl font-bold tracking-tight">This is the FAQ page</h1>
  <ul class="grid grid-cols-2 gap-20 my-14 px-10">
    {{ range . }}
    {{ template "qa" . }}
    {{
      end
    }}
  </ul>
</div>
{{template "footer" .}}

{{define "qa"}}
<li class="border-t px-2">
  <p class="mt-2 font-semibold text-lg">{{.Question}}</p>
  <p class="text-slate-500 text-sm">{{.Answer}}</p>
</li>
{{ end }}
